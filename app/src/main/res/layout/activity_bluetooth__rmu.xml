<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_listublurj"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/l1" />

    <TextView
        android:id="@+id/sensorView0ublurj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/textublurj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:layout_below="@+id/textublurj"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Registration_number"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/numberid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#2c3e50"
            android:textSize="22dp" />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:id="@+id/cardmaster"
        android:layout_below="@id/number"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corner"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/father_name"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/fatheride"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="father"
                        android:textColor="#2c3e50"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="left"
                        android:text="@string/Contact"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contactide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:maxLines="1"
                        android:textColor="#2c3e50"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/Village"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/villageide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Village"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:textColor="#2c3e50" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/Benificiary"
                            android:textColor="@color/primary"
                            android:layout_marginRight="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/benificiaryide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="father"
                            android:textColor="#2c3e50"
                            android:textSize="16sp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/Block"
                            android:textColor="@color/primary"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/blockide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Block"
                            android:maxLines="1"
                            android:textColor="#2c3e50"
                            android:textSize="16sp"

                            />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/cardmaster"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical"
            android:weightSum="10">


            <LinearLayout
                android:id="@+id/rmucard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:weightSum="5.5">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="2dp"

                        android:layout_weight="4"
                        android:paddingRight="25dp"
                        android:text="@string/new_rmu_number"
                        android:textColor="@color/primary"
                        android:textSize="22dp"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:background="@drawable/button_corner"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/textrmunonewublurj"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="10"
                            android:editable="false"
                            android:background="@color/zxing_transparent"
                            android:hint=" Enter New RMU No"
                            android:inputType="number"
                            android:maxLength="19"
                            android:paddingLeft="2dp"
                            android:textSize="20dp" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/new_rmu_image"
                    android:textColor="#9f3342"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/imagecard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="60dp"
                        android:layout_weight="10"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:id="@+id/rmu_image_clicku"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/card_view"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imagermu_oneublurj"
                                android:layout_width="match_parent"

                                android:layout_height="match_parent"
                                android:background="@mipmap/rmupicclick"
                                android:scaleType="fitXY" />
                            <!--<TextView-->
                            <!--android:id="@+id/t1"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Tap to Click "-->
                            <!--android:textSize="15sp"-->
                            <!--android:textColor="#9f3342"-->
                            <!--android:layout_margin="5dp"/>-->
                            <!--<ImageView-->
                            <!--android:layout_width="25dp"-->
                            <!--android:layout_height="25dp"-->
                            <!--android:src="@drawable/demo_iv"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_alignParentBottom="true"/>-->

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:id="@+id/sendublurj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagecard"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/benifbuttoncorner"
                    android:text="Send" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/senduu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/benifbuttoncorner"
        android:paddingLeft="2dp"
        android:text="Upload"
        android:textColor="@android:color/white"
        android:textSize="15dp" />
</RelativeLayout>