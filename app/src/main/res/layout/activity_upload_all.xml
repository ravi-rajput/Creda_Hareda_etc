<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/hareda_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:visibility="visible"
            android:text="क्वार्टरली रिपोर्ट"/>

<Button
    android:id="@+id/saral"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/primary"
    android:textColor="@color/white"
    android:layout_margin="20dp"
    android:textSize="20sp"
    android:visibility="gone"
    android:text="Saral Id"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/pit_card"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_weight="2"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/primary"
                    android:orientation="vertical"
                    android:id="@+id/pit_submit"
                    android:weightSum="5"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/mining"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:background="@color/primary"
                        android:text="गड्ढे की फोटो"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="7">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/primary"
                        android:orientation="vertical"
                        android:id="@+id/siteSurveyf"
                        android:weightSum="5"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/mining"
                            android:layout_height="0dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:background="@color/primary"
                            android:text="Foundation"
                            android:textColor="#fff"
                            android:textSize="15dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/primary"
                        android:orientation="vertical"
                        android:id="@+id/mtrDetail"
                        android:weightSum="5"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ship"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@color/primary"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Material\nDispatch"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="7">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/primary"
                android:id="@+id/sitesurvey"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/evaluation"
                    android:layout_height="0dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@color/primary"
                android:text="SiteSurvey"
                android:textColor="#fff"
                android:textSize="15dp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                app:cardCornerRadius="10dp"
                android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/primary"
                android:orientation="vertical"
                android:id="@+id/farmerPhoto"
                android:weightSum="5"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="3"
                    android:src="@drawable/installi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/primary"
                android:layout_marginTop="10dp"
                android:text="Installation"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="15dp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:layout_weight="7">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/installrmubluetooth"
                    android:layout_width="match_parent"
                    android:background="@color/primary"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="3"
                        android:src="@drawable/gauge" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="@color/primary"
                        android:gravity="center"
                        android:text="RMU Intallation"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="10dp"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:id="@+id/cmcbutton"
                        android:layout_width="match_parent"
                        android:background="@color/primary"
                        android:orientation="vertical"
                        android:weightSum="5"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="3"
                            android:src="@drawable/folder" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:background="@color/primary"
                            android:layout_marginTop="10dp"
                            android:text="CMC"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="#fff"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:layout_height="180dp">
                <LinearLayout
                    android:id="@+id/f_material"
                    android:layout_width="match_parent"
                    android:background="@color/primary"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="5"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="3"
                        android:src="@drawable/ship" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/primary"
                        android:layout_marginTop="10dp"
                        android:text="Foundation Material"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:textSize="15dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>